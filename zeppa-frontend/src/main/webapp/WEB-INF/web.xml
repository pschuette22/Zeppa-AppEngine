<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <servlet>
    <servlet-name>Upload</servlet-name>
    <servlet-class>com.zeppamobile.frontend.imageupload.Upload
		</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Upload</servlet-name>
    <url-pattern>/image/upload/</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GetUploadUrl</servlet-name>
    <servlet-class>com.zeppamobile.frontend.imageupload.GetUploadUrl
		</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetUploadUrl</servlet-name>
    <url-pattern>/getuploadurl</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.zeppamobile.frontend.login.LoginServlet
		</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>compare-tags</servlet-name>
    <servlet-class>com.zeppamobile.frontend.comparetags.CompareTagsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>compare-tags</servlet-name>
    <url-pattern>/compare-tags</url-pattern>
  </servlet-mapping>
	<servlet>
		<servlet-name>create-event</servlet-name>
		<servlet-class>com.zeppamobile.frontend.createevent.CreateEventServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>create-event</servlet-name>
    <url-pattern>/create-event</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>EmailFormServlet</display-name>
    <servlet-name>EmailFormServlet</servlet-name>
    <servlet-class>com.zeppamobile.frontend.emailform.EmailFormServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EmailFormServlet</servlet-name>
    <url-pattern>/email-form</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>GetEventsServlet</display-name>
    <servlet-name>get-events</servlet-name>
    <servlet-class>com.zeppamobile.frontend.getevents.GetEventsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>get-events</servlet-name>
    <url-pattern>/get-events</url-pattern>
  </servlet-mapping>
  
  <!-- Mapping to the hello world servlet -->
  <servlet>
    <display-name>HelloWorld</display-name>
    <servlet-name>hello-world</servlet-name>
    <servlet-class>com.zeppamobile.frontend.helloworld.HelloWorldServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>hello-world</servlet-name>
    <url-pattern>/hello-world</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
  	<welcome-file>hello-world.jsp</welcome-file>
  </welcome-file-list>
  
</web-app>