<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">



	<!-- Upload handles uploading a blob to blobstore -->
	<servlet>
		<servlet-name>Upload</servlet-name>
		<servlet-class>com.zeppamobile.frontend.imageupload.Upload
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Upload</servlet-name>
		<url-pattern>/image/upload/</url-pattern>
	</servlet-mapping>

	<!-- GetUploadUrl is for obtaining an upload url for blobstore -->
	<servlet>
		<servlet-name>GetUploadUrl</servlet-name>
		<servlet-class>com.zeppamobile.frontend.imageupload.GetUploadUrl
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetUploadUrl</servlet-name>
		<url-pattern>/getuploadurl</url-pattern>
	</servlet-mapping>
	
	<!-- Front end servlet for comparing tags -->
	<servlet>
		<servlet-name>compare-tags</servlet-name>
		<servlet-class>com.zeppamobile.frontend.comparetags.CompareTagsServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>compare-tags</servlet-name>
		<url-pattern>/compare-tags</url-pattern>
	</servlet-mapping>


	<!-- Security contraints for managing backend transactions -->
