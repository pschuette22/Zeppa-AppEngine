<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>zeppa-smartfollow</display-name>



	<!-- Create Initial -->
	<servlet>
		<servlet-name>CreateInitialFollowsServlet</servlet-name>
		<servlet-class>com.zeppamobile.smartfollow.servlet.CreateInitialFollowsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreateInitialFollowsServlet</servlet-name>
		<url-pattern>/create-initial</url-pattern>
	</servlet-mapping>

	<!-- Compare two tags -->
	<servlet>
		<servlet-name>CompareTagsServlet</servlet-name>
		<servlet-class>com.zeppamobile.smartfollow.servlet.CompareTagsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CompareTagsServlet</servlet-name>
		<url-pattern>/compare-tags</url-pattern>
	</servlet-mapping>

	<!-- Word Tagger -->

	<servlet>
		<servlet-name>WordTaggerServlet</servlet-name>
		<servlet-class>com.zeppamobile.smartfollow.servlet.WordTaggerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>WordTaggerServlet</servlet-name>
		<url-pattern>/word-tagger</url-pattern>
	</servlet-mapping>
	
	
</web-app>
